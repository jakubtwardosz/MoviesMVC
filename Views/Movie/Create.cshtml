@model Movie

@{
    ViewData["Title"] = "Create";
}

<h1>Add a movie</h1>
<form asp-action="Create" method="POST">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id" />

    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control" />

    <label asp-for="Author" class="control-label"></label>
    <input asp-for="Author" class="form-control" />

    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" class="form-control"></textarea>

    <label asp-for="ReleaseDate" class="control-label"></label>
    <input asp-for="ReleaseDate" class="form-control" />

    <label asp-for="BoxOffice" class="control-label"></label>
    <input asp-for="BoxOffice" class="form-control" />

    <label asp-for="Rating" class="control-label"></label>
    <select class="form-control" asp-for="Rating"
            asp-items="@Html.GetEnumSelectList<Rating>()"></select>
    
    <div class="form-group mt-3">
        <input type="submit" value="Dodaj nowy film" class="btn btn-success" />
    </div>
</form>
